<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".ActivityTransporte" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/principal"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lineau1"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="290pt"
                android:layout_marginStart="25pt"
                android:text="Linea U1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/boton_borde"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/linean3"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="290pt"
                android:layout_marginStart="100pt"
                android:text="Linea N3"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/boton_borde"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/linea4"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="325pt"
                android:layout_marginStart="25pt"
                android:text="Linea 4"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/boton_borde"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/linea9"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="325pt"
                android:layout_marginStart="100pt"
                android:text="Linea 9"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/boton_borde"/>


            <ImageView
                android:id="@+id/mapa"
                android:layout_width="345dp"
                android:layout_height="500dp"
                android:layout_marginTop="5pt"
                android:layout_marginStart="4pt"
                android:background="@drawable/mapalineas"
                app:srcCompat="@drawable/logomapalineas" />


        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
