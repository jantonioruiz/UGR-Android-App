<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".ActivityInfo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/principal"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/becas"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35pt"
                android:text="InformaciÃ³n becas       y Erasmus"
                android:textStyle="bold"
                android:textSize="15sp"
                android:drawableLeft="@drawable/logobecas"
                android:paddingLeft="16dp"
                android:background="@drawable/boton_borde"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comedor"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="135pt"
                android:text="Comedor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:drawableLeft="@drawable/logocomedor"
                android:paddingLeft="16dp"
                android:background="@drawable/boton_borde" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/transporte"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="235pt"
                android:text="Transporte"
                android:textStyle="bold"
                android:textSize="15sp"
                android:drawableLeft="@drawable/logobus"
                android:paddingLeft="16dp"
                android:background="@drawable/boton_borde"/>


        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
