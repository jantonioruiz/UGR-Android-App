<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogflow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".FragmentDialogFlow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/boton_borde"
        android:isScrollContainer="true"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/chatScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">

            <LinearLayout
                android:id="@+id/chatLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/boton_borde"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/queryEditText"
            android:layout_width="239dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:layout_marginLeft="10dp"
            android:hint="@string/escribe_aqui"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fb_listening"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/logomicrofonodf" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_tts"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/logosonidodf" />

</LinearLayout>